<form class="blog-form" action="<%= action %>" method="post">
  <% if method == "put" %>
    <input type="hidden" name="_method" value="put">
  <% end %>

  <input type="text" name="blog[title]" placeholder="Start typing.." value="<%= blog&.title %>">

  <textarea name="blog[content]" placeholder="Start typing..."><%= blog&.content %></textarea>

  <input type="submit" value="<%= submit_text %>" class="button-regular">
</form>
